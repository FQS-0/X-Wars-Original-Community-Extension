{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],

      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "noEmit": true,
      "jsx": "react",
      "baseUrl": "./src"
    },
    "include": ["src"]
  }