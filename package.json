{
  "name": "x-wars-original-community-extension",
  "version": "0.0.1",
  "description": "Enhance the user interface of X-Wars Original.",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "parcel watch src/manifest.json --host localhost --config @parcel/config-webextension --no-hmr & web-ext run --devtools -s dist/",
    "build": "parcel build manifest.json --target webext-prod",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FQS-0/X-Wars-Original-Community-Extension.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FQS-0/X-Wars-Original-Community-Extension/issues"
  },
  "homepage": "https://github.com/FQS-0/X-Wars-Original-Community-Extension#readme",
  "devDependencies": {
    "@parcel/config-webextension": "^2.9.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "parcel": "^2.9.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "web-ext": "^7.6.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --ext .ts,.tsx,.js,.jsx",
      "prettier --write"
    ]
  }
}
